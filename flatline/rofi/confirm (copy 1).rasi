/*****----- Configuration -----*****/
configuration {
    show-icons:                 false;
}

/*****----- Global Properties -----*****/
@import                          "shared/colors.rasi"
@import                          "shared/fonts.rasi"

/*
USE_ICON=NO
*/

/*****----- Main Window -----*****/
window {
    transparency:                "real";
    location:                    center;
    anchor:                      center;
    fullscreen:                  true;
    width:                       600px;
    x-offset:                    0px;
    y-offset:                    0px;
    margin:                      0px;
    padding:                     310px 490px 140px 490px;
    border:                      0px solid;
    border-radius:               10px;
    border-color:                @selected;
    cursor:                      "default";
    background-image:            url("/home/mrnngstr666/.config/rofi/user-interfces/cyberpunk/power/power-conf.png", width);

    background-color:            #0d111590;
}

/*****----- Main Box -----*****/
mainbox {
    enabled:                     true;
    spacing:                     10px;
    margin:                      30px;
    padding:                     0px;
    background-color:            transparent;
    children:                    [ "listview" ];
}

/*****----- Inputbar -----*****/
inputbar {
    enabled:                     true;
    spacing:                     10px;
    padding:                     0px;
    border:                      0px;
    border-radius:               0px;
    border-color:                @selected;
    background-color:            transparent;
    text-color:                  @foreground;
    children:                    [ "textbox-prompt-colon", "prompt"];
}

textbox-prompt-colon {
    enabled:                     true;
    expand:                      false;
    str:                         "î§€";
    padding:                     10px 12px;
    border-radius:               100%;
    background-color:              transparent;
    text-color:                  transparent;
}
prompt {
    enabled:                     true;
    padding:                     10px;
    border-radius:               20px;
  background-color:              transparent;
    text-color:                  #76f8ff;
}

/*****----- Message -----*****/
message {
    enabled:                     true;
    margin:                      0px;
    padding:                     10px 10px 10px 57px;
    border:                      0px solid;
    border-radius:               12px;
    border-color:                @selected;
    background-color:             transparent;
    text-color:                  #76f8ff;
}
textbox {
    background-color:            inherit;
    text-color:                  inherit;
    vertical-align:              0.5;
    horizontal-align:            0.0;
}

/*****----- Listview -----*****/
listview {
    enabled:                     true;
    columns:                     6;
    lines:                       1;
    cycle:                       true;
    scrollbar:                   false;
    layout:                      vertical;
    spacing:                     90px;
    background-color:            transparent;
    cursor:                      "default";
}

/*****----- Elements -----*****/
element {
    enabled:                     true;
    padding:                     60px 10px 55px 10px;
    margin:                      0px 0px 0px 0px;
    border:                      0px solid;
    border-radius:               12px;
    border-color:                @selected;
    background-color:            transparent;
    text-color:                  @foreground;
    cursor:                      pointer;

}
element-text {
    font:                        "Rajdhani bold 12";
    background-color:            transparent;
    text-color:                  inherit;
    cursor:                      inherit;
    vertical-align:              0;
    horizontal-align:            0.5;
}

element normal.normal,
element alternate.normal {
    background-color:            transparent;
    background-image:            url("/home/mrnngstr666/.config/rofi/user-interfces/cyberpunk/power/power-seln.png", width);
    text-color:                  #414767;
}
element normal.urgent,
element alternate.urgent,
element selected.active {
    background-color:            transparent;
    text-color:                  var(background);
}
element normal.active,
element alternate.active,
element selected.urgent {
    background-color:         transparent;
    text-color:                  var(background);
}
element selected.normal {
    background-color:             transparent;
    text-color:                  #54ced4;
    background-image:            url("/home/mrnngstr666/.config/rofi/user-interfces/cyberpunk/power/power-sel.png", width);

}
